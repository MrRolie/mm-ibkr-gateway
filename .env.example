# IBKR Gateway Configuration

# IBKR Gateway / TWS Connection
IBKR_GATEWAY_HOST=127.0.0.1

# Paper Trading Connection (default: port 4002, client_id 1)
PAPER_GATEWAY_PORT=4002
PAPER_CLIENT_ID=1

# Live Trading Connection (default: port 4001, client_id 777)
LIVE_GATEWAY_PORT=4001
LIVE_CLIENT_ID=777

# Trading Mode
# Options: paper, live
# Default: paper
# NOTE: Only one mode can be tested at a time (whichever Gateway is running)
TRADING_MODE=paper

# Enable Order Placement
# Options: false, true
# Default: false (require explicit override to enable)
ORDERS_ENABLED=false

# API Server
API_PORT=8000
LOG_LEVEL=INFO

# (Optional) If TRADING_MODE=live and ORDERS_ENABLED=true, 
# require this flag for extra safety:
# LIVE_TRADING_OVERRIDE_FILE=/path/to/live-trading-enable
